@page "/adddepartment"
@inject NavigationManager Navigation

@code {
    private AddDepartment newDepartment = new AddDepartment();

    private void Cancel()
    {
        Navigation.NavigateTo("/alldepartments");
    }

    private void SaveDepartment()
    {



        Navigation.NavigateTo("/alldepartments");
    }
}

<div class="container-fluid">
    <div class="row">
        <main class="col-12 p-3">
            <header class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1>Add New Department</h1>
                    <div class="breadcrumb">
                        <a href="alldepartments" class="breadcrumb-link">All Departments</a> &gt; <span class="breadcrumb-current"> Add Department </span>
                    </div>
                </div>
                <div class="user-info">
                    <NavLink href="/counter" class="center">
                        <img src="notification.png" />
                    </NavLink>
                    <img src="leasie-watson.jpg" alt="Profile Picture" class="center" />
                    <div>
                        <h2>Robert Allen</h2>
                        <p>HR Manager</p>
                    </div>
                </div>
            </header>
            <div class="form-section horizontal-fields">
                <input type="text" id="name-of-certificate" placeholder="Name of Certificate">
                <input type="text" id="organization" placeholder="Organization">
            </div>
            <div class="form-group">
                <label for="departmentDetail">Department Detail</label>
                <textarea id="departmentDetail" class="form-control" @bind="newDepartment.Detail"></textarea>
            </div>

            <div class="form-group d-flex justify-content-end">
                <button class="btn btn-secondary" @onclick="Cancel">Cancel</button>
                <button class="btn btn-primary" @onclick="SaveDepartment">Save</button>
            </div>

        </main>
    </div>
</div>

