<div class="container-fluid">
    <div class="row">
        <main class="col-12 p-3">
            <header class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1>All Departments</h1>
                    <p>All Departments Information</p>
                </div>
                <div class="user-info">
                    <NavLink href="/counter" class="center">
                        <img src="notification.png" />
                    </NavLink>
                    <img src="leasie-watson.jpg" alt="Profile Picture" class="center" />
                    <div>
                        <h2>Robert Allen</h2>
                        <p>HR Manager</p>
                    </div>
                </div>
            </header>
            <div class="add-icon">
                <NavLink href="/addemployee" class="center">
                    <img src="plus.png" alt="Add" class="icon" />
                </NavLink>
            </div>
            <section class="departments-section">
                <div class="row">
                    @foreach (var department in Departments)
                    {
                        <div class="col-md-6 mb-4">
                            <div class="card">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <h5>@department.Name</h5>
                                    <a href="#">View All</a>
                                </div>
                                <div class="card-body">
                                    <p>@department.MemberCount Members</p>
                                    <ul class="list-group list-group-flush">
                                        @foreach (var employee in department.Employees)
                                        {
                                            <li class="list-group-item d-flex align-items-center">
                                                <img src="@employee.ImageUrl" alt="Employee Image" class="rounded-circle" width="40" height="40" />
                                                <div class="ml-2">
                                                    <span>@employee.Name</span><br />
                                                    <span class="text-muted">@employee.Position</span>
                                                </div>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </section>
        </main>
    </div>
</div>


