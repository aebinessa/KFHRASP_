@page "/alldepartments"

@code {
    private List<Department> Departments = new List<Department> { };

}

<div class="container-fluid">
    <div class="row">
        <main class="col-12 p-3">
            <header class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1>All Departments</h1>
                    <p>All Departments Information</p>
                </div>
                <div class="user-info">
                    <NavLink href="/counter" class="center">
                        <img src="notification.png" />
                    </NavLink>
                    <img src="leasie-watson.jpg" alt="Profile Picture" class="center" />
                    <div>
                        <h2>Robert Allen</h2>
                        <p>HR Manager</p>
                    </div>
                </div>
            </header>
            <div class="add-icon">
                <NavLink href="/addemployee" class="center">
                    <img src="plus.png" alt="Add" class="icon" />
                </NavLink>
            </div>
            <section class="departments-section">
                <div class="row">
                    @foreach (var department in Departments)
                    {
                        <div class="col-md-6 mb-4">
                            <div class="card">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <h5>@department</h5>
                                    <a href="#">View All</a>
                                </div>
                                <div class="card-body">
                                    <p>@department Members</p>
                                    <ul class="list-group list-group-flush">
                                       
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </section>
        </main>
    </div>
</div>


<style>
    .container-fluid {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .user-info {
        display: flex;
        align-items: center;
        margin: 1px;
        border: 1px solid #4B995C;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 10px;
        font-size: 24px;
        background-color: #e9f2eb;
    }

        .user-info h2 {
            font-size: 24px;
            margin-bottom: -3px;
        }

        .user-info p {
            font-size: 14px;
            margin-bottom: -3px;
        }

        .user-info img {
            border-radius: 50%;
            width: 50px;
            height: 50px;
            margin-right: 10px;
        }

    .add-icon {
        justify-content: center;
        margin-top: 10px;
    }

        .add-icon img.icon {
            width: 30px;
            height: 30px;
        }

    .card {
        border: 1px solid #dee2e6;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        background-color: #fff;
        border-bottom: 1px solid #dee2e6;
        padding: 10px;
    }

        .card-header a {
            color: #4B995c;
            text-decoration: none;
        }

    .card-body {
        padding: 10px;
    }

    .list-group-item {
        border: none;
        padding: 10px 0;
    }

        .list-group-item img {
            border-radius: 50%;
            width: 40px;
            height: 40px;
            margin-right: 10px;
        }

    .departments-section {
        margin-top: 20px;
    }

</style>

