@page "/dashboard"

@using KFHRFrontEnd.Components
@using KFHRFrontEnd.Models
@using System.Net.Http
@using System.Net.Http.Json


@inject HttpClient Http
@inject NavigationManager Navigation
@inject GlobalAppState AppState

@code {
    private List<AllEmployee> employees = new List<AllEmployee>();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var client = new HttpClient();
            if (AppState != null)
            {

                client.DefaultRequestHeaders.Authorization = new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", AppState.AuthToken);

               employees = await client.GetFromJsonAsync<List<AllEmployee>>("https://kfhrbackend20240528002909.azurewebsites.net/api/Admin/Employees");
                
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error fetching employees: {ex.Message}");
        }
    }
}

<div class="header">
    <div class="greeting">
        <h1>Hello Robert</h1>
        <p>Good Morning!</p>
    </div>
    <div class="user-info">
            <NavLink href="/counter" class="center">
                <img src="notification.png" />
            </NavLink>
             <NavLink href="/profile" class="center">
        <img src="leasie-watson.jpg"  alt="Profile Picture" class="center" />
            </NavLink>
        <div>
            <h2>Robert Allen</h2>
            <p>HR Manager</p>
        </div>
    </div>
</div>

<div class="stats-cards">
    <div class="stats-card">
        <i class="bi bi-people-fill"></i>
        <div class="stats-info">
            <p>Total Employees: <span>@employees.Count</span></p>
        </div>
    </div>
    <div class="stats-card">
        <i class="bi bi-calendar-check"></i>
        <div class="stats-info">
            <p>Today Attendance: <span>512</span></p>
        </div>
    </div>
    <div class="stats-card">
        <i class="bi bi-briefcase"></i>
        <div class="stats-info">
            <p>Total Departments: <span>27</span></p>
        </div>
    </div>
</div>


<div class="update-info">
    Date: @DateTime.Now.ToString("MMMM dd, yyyy")
</div>

<div class="attendance-overview">
    <h2>Attendance Overview</h2>
    <table>
        <thead>
            <tr>
                <th>Employee Name</th>
                <th>Position</th>
                <th>Check In</th>
            </tr>
        </thead>
        <tbody>
            @if (employees != null && employees.Count > 0)
            {
                foreach (var employee in employees)
                {
                    <tr>
                        <td><img src="@employee.ProfilePicURL"/> @employee.Name</td>
                        <td>@employee.PositionId</td>
                        <td>7:01</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3">No employees found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

